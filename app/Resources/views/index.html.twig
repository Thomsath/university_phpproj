{% extends 'layout.html.twig' %}

{% block header %}
<!-- Page Header -->
<header class="masthead" style="background-image: url('{{ asset('theme/img/home-bg.jpg') }}')">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h1>1, 2, 3... évaluez!</h1>
          <span class="subheading">Recherchez un produit par code barre</span>
          <form method="post" action="{{ path('search') }}">
              {{ form_widget(form.code_barre) }}
              <input type="submit" class="btn btn-primary" value="Go!" />
              {{ form_end(form) }}
          </form>
        </div>
      </div>
    </div>
  </div>
</header>
{% endblock %}

{% block contents %}
<div class="row">
    <div class="col-lg-12">
        <h2>Mieux notés</h2>
    </div>
    {% set i = 0 %}
    {% for bestnote_pic in prodpic_bestnote %}
      <div class="col-md-4" style="padding-top: 15px">
        <a href="{{ path('product', {'code_barre': cb_bestnote_tab[i]}) }}"><div class="product col-lg-12 p-1" style="display: flex; align-items: center; flex-direction: column; text-align: center;">
          <img src="{{ bestnote_pic }}" class="recently_consult">
          <h4>{{ prodname_bestnote[i] }} </h4>
          {% set i = i + 1 %}
        </div>
        </a>
      </div>

    {% endfor %}
    <div class="col-lg-12">
        <h2>Consultés récemment</h2>
    </div>
    {% set i = 0 %}

    {% for pic in tab_pic %}
     <div class="col-md-4" style="padding-top: 15px">
         <a href="{{ path('product', {'code_barre': cb_tab[i]}) }}"><div class="product col-lg-12 p-1" style="display: flex; align-items: center; flex-direction: column;">
          <img src="{{ pic }}" class="recently_consult">
          <h4>{{tab_name[i] }} </h4>
          {% set i = i + 1 %}
        </div></a>
      </div>
    {% endfor %}
</div>
{% endblock %}
